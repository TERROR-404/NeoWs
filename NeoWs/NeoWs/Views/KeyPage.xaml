<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeoWs.Views.KeyPage"
             Title="API key">
    <VerticalStackLayout>
        <Border Stroke="Black"
                StrokeThickness="1"
                MaximumWidthRequest="350"
                Margin="0,0,0,30">
            <Entry x:Name="apiKeyInput"/>
        </Border>
        <Button Text="Save" FontSize="15" FontAttributes="Bold" MaximumWidthRequest="130" Clicked="Save_Clicked"/>
    </VerticalStackLayout>
</ContentPage>